fbcompose_CPPFLAGS = \
	$(AM_CPPFLAGS) \
	-I$(src_incdir) \
	-I$(top_scrdir)/src/FbTk

fbcompose_CXXFLAGS = \
	$(AM_CXXFLAGS) \
	-Wall \
	-Wextra \
	-pedantic

fbcompose_SOURCES = \
	util/fbcompose/main.cc \
	util/fbcompose/Atoms.hh util/fbcompose/Atoms.cc \
	util/fbcompose/CompositorConfig.hh util/fbcompose/CompositorConfig.cc \
	util/fbcompose/Constants.hh \
	util/fbcompose/Enumerations.hh \
	util/fbcompose/Exceptions.hh \
	util/fbcompose/Logging.hh util/fbcompose/Logging.cc \
	util/fbcompose/ServerAutoApp.hh util/fbcompose/ServerAutoApp.cc \
    ${fbcompose_main_SOURCES} \
	${fbcompose_opengl_SOURCES} \
	${fbcompose_xrender_SOURCES}

fbcompose_LDADD = \
	libFbTk.a \
	$(FONTCONFIG_LIBS) \
	$(XINERAMA_LIBS) \
	$(XFT_LIBS)

