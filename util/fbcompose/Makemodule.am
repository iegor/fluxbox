	util/fbcompose/BasePlugin.hh util/fbcompose/BasePlugin.cc \
	util/fbcompose/BaseScreen.hh util/fbcompose/BaseScreen.cc \
	util/fbcompose/Compositor.hh util/fbcompose/Compositor.cc \
	util/fbcompose/PluginManager.hh util/fbcompose/PluginManager.cc \
	util/fbcompose/TickTracker.hh util/fbcompose/TickTracker.cc \
	util/fbcompose/Utility.hh util/fbcompose/Utility.cc
endif # SERVERAUTO_COMPOSITING_ONLY

if OPENGL_COMPOSITING
fbcompose_opengl_SOURCES = \
	util/fbcompose/OpenGLPlugin.hh util/fbcompose/OpenGLPlugin.cc \
	util/fbcompose/OpenGLResources.hh util/fbcompose/OpenGLResources.cc \
	util/fbcompose/OpenGLScreen.hh util/fbcompose/OpenGLScreen.cc \
	util/fbcompose/OpenGLShaders.hh util/fbcompose/OpenGLShaders.cc \
    util/fbcompose/OpenGLTexPartitioner.hh util/fbcompose/OpenGLTexPartitioner.cc \
